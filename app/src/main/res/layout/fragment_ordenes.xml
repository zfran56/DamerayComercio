<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    android:id="@+id/rootFragment"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <Button
        android:id="@+id/btn_ordenes_disponibles"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Ordenes disponibles"
        android:background="@color/colorMenu"
        android:textColor="@color/white"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:textAllCaps="false"
        app:layout_constraintRight_toLeftOf="@id/btn_ordenes_asignadas"/>

    <Button
        android:id="@+id/btn_ordenes_asignadas"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Ordenes asignadas"
        android:background="@color/colorMenu"
        android:textColor="@color/white"
        android:textAllCaps="false"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toRightOf="@id/btn_ordenes_disponibles"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toTopOf="@id/container_fragmento_ordenes"/>

    <FrameLayout
        android:id="@+id/container_fragmento_ordenes"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/btn_ordenes_asignadas"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginTop="@dimen/margin_default"/>

</androidx.constraintlayout.widget.ConstraintLayout>