<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <data>
        <import type="android.view.View" />
        <variable
            name="ordensActivas"
            type="com.dameray.rider.menu.model.OrdenesActivasModel" />
    </data>

    <androidx.cardview.widget.CardView
        android:id="@+id/root"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/margin_default"
        android:background="@color/transparent"
        app:cardElevation="@dimen/margin_tiny"
        android:padding="@dimen/margin_default">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/img_pedido"
                android:layout_width="@dimen/size_logo_land"
                android:layout_height="@dimen/size_logo_land"
                android:layout_marginTop="@dimen/margin_tiny"
                android:layout_marginLeft="@dimen/margin_tiny"
                android:textStyle="bold"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/lbl_nombre_pedido"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textSize="@dimen/text_size_default"
                android:layout_marginLeft="@dimen/margin_tiny"
                android:layout_marginRight="@dimen/margin_tiny"
                android:layout_marginTop="@dimen/margin_tiny"
                android:textColor="@color/primary"
                android:text="@{`Orden # `+ ordensActivas.key}"
                android:gravity="center"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toTopOf="@id/lbl_direccion_pedido"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintLeft_toRightOf="@+id/img_pedido"/>

            <TextView
                android:id="@+id/lbl_direccion_pedido"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textSize="@dimen/text_size_default"
                android:layout_marginLeft="@dimen/margin_tiny"
                android:layout_marginRight="@dimen/margin_tiny"
                android:layout_marginTop="@dimen/margin_tiny"
                android:textColor="@color/black"
                android:text="@{ordensActivas.validarcomercio() ? ordensActivas.comercio.get(0).nombre : `Mandado` }"
                app:layout_constraintTop_toBottomOf="@id/lbl_nombre_pedido"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintBottom_toTopOf="@id/lbl_fecha_pedido"
                app:layout_constraintLeft_toRightOf="@+id/img_pedido"/>

            <TextView
                android:id="@+id/lbl_fecha_pedido"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textSize="@dimen/text_size_default"
                android:layout_marginLeft="@dimen/margin_tiny"
                android:layout_marginTop="@dimen/margin_tiny"
                android:layout_marginBottom="@dimen/margin_tiny"
                android:layout_marginRight="@dimen/margin_tiny"
                android:textColor="@color/black"
                android:gravity="left"
                android:text="@{` Listo desde :  `+ ordensActivas.hora}"
                style="bold"
                app:layout_constraintBottom_toTopOf="@id/button_detalle"
                app:layout_constraintTop_toBottomOf="@id/lbl_direccion_pedido"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintLeft_toRightOf="@+id/img_pedido"/>



            <Button
                android:id="@+id/button_detalle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@{ordensActivas.mitiempo == 1? @color/red: @color/gold}"
                android:focusable="false"
                android:focusableInTouchMode="false"
                android:text="Mostrar detalles"
                android:layout_margin="@dimen/margin_tiny"
                android:textColor="@color/white"
                app:layout_constraintTop_toBottomOf="@id/img_pedido"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintRight_toRightOf="parent" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>
</layout>