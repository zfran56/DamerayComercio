<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.dameray.rider">

    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/dameray_logo"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:usesCleartextTraffic="true"
        android:theme="@style/AppTheme">

        <meta-data
            android:name="com.google.android.geo.API_KEY"
            android:value="AIzaSyAT5af7QLiSJ7mDBD96wCx07ZYtw82ZNfU" />
        <meta-data
            android:name="com.google.android.actions"
            android:resource="@xml/network_security_config" />


        <activity android:name="com.dameray.rider.SplashActivty"
            android:noHistory="true"
            android:screenOrientation="portrait"
            android:stateNotNeeded="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.dameray.rider.login.LoginActivity"
            android:launchMode="singleTask"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.dameray.rider.menu.MenuActivity"
            android:screenOrientation="portrait">
        </activity>
        <activity
            android:name="com.dameray.rider.menu.fragment.pedidos.ActivityOrdenesDisponibles"
            android:screenOrientation="portrait">
        </activity>
        <activity
            android:name="com.dameray.rider.menu.fragment.pedidos.ActivityOrdenesActivasDetalle"
            android:screenOrientation="portrait">
        </activity>
        <activity
            android:name="com.dameray.rider.menu.fragment.pedidos.ActivitySeguimientoOrden"
            android:screenOrientation="portrait">
        </activity>
        <activity
            android:name="com.dameray.rider.menu.fragment.pedidos.ActivityOrdenesAsignadas"
            android:screenOrientation="portrait">
        </activity>
        <service android:name=".MyFirebaseMessagingService">
            <intent-filter><action android:name="com.google.firebase.MESSAGING_EVENT"></action></intent-filter>
        </service>
    </application>

</manifest>